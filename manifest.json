{
  "name": "libFan",
  "version": "2.0.0",
  "manifest_version": 2,
  "description": "汇文 OPAC 系统第三方便捷扩展",
  "content_scripts": [{
    "css": ["css/inject.css"],
    "js": ["js/util.js", "js/vendor/jquery-2.1.0.min.js", "js/inject.js"],
    "matches": [
      "http://book.douban.com/subject/*",
      "http://www.amazon.cn/*",
      "http://www.amazon.com/*",
      "http://product.dangdang.com/*",
      "http://item.jd.com/*",
      "http://*/reader/*"
    ],
    "run_at": "document_end"
  }],
  "options_page": "options.html",
  "background": {
    "scripts": ["js/util.js", "js/vendor/jquery-2.1.0.min.js", "js/huiwen.js", "js/background.js"],
    "persistent": true
  },
  "browser_action": {
    "default_icon": "icon.png",
    "default_title": "libFan",
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "images/16x16.png",
    "32": "images/32x32.png",
    "48": "images/48x48.png",
    "64": "images/64x64.png",
    "512": "icon.png"
  },
  "permissions": [
    "tabs",
    "http://*/*",
    "notifications",
    "contextMenus"
  ],
  "web_accessible_resources": [
    "css/inject.css",
    "css/loading.gif",
    "icon.png",
    "js/lib.js",
    "templates.html"
  ]
}
