{
  "name": "书迷",
  "version": "2.0.0",
  "manifest_version": 2,
  "description": "汇文OPAC系统便捷扩展",
  "content_scripts": [ {
      "css": [ "css/inject.css" ],
      "js": [ "js/jquery-2.1.0.min.js" , "js/inject.js" ],
      "matches": [
          "http://book.douban.com/subject/*",
          "http://www.amazon.cn/*",
          "http://www.amazon.com/*",
          "http://product.dangdang.com/*", 
          "http://item.jd.com/*",
          "http://*/reader/*"
      ],
      "run_at": "document_end"
   } ],
  "options_page": "options.html",
  "background": {
    "scripts": [ "js/jquery-2.1.0.min.js", "js/lib.js" , "js/background.js"],
    "persistent": true
  },
  "browser_action": {
    "default_icon": "icon.png",
    "default_title": "书迷",
    "default_popup": "popup.html"
  },
  "icons": {
    "128": "icon.png",
    "16": "icon.png",
    "32": "icon.png",
    "48": "icon.png"
  },
  "permissions": [
    "tabs",
    "http://*/*",
    "notifications",
    "contextMenus"
  ],
  "web_accessible_resources": [ "css/inject.css" , "js/lib.js", "icon.png", "css/loading.gif"]
}